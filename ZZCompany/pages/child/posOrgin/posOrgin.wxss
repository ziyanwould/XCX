.sort{
  display: flex;
  margin: 30rpx;
  justify-content:space-between;
}
.sort text{
  display: inline-block;
  width: 330rpx;
  height: 58rpx;
  border: 2rpx solid #E3E3E3;
  text-align: center;
  line-height: 58rpx;
  border-radius: 5rpx;
}
.sort text.active{
  background: #1B87E0;
  color: #FFFFFF;
  border: 2rpx solid #1B87E0;
}